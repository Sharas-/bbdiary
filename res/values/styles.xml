<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="exercising_background">#ff5400</color>
    <color name="resting_background">#a4d11b</color>
    <style name="Base" parent="android:Theme.Light">
        <item name="android:textSize">12pt</item>
    </style>
    <style name="exercising">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">64pt</item>
        <item name="android:background">@color/exercising_background</item>
    </style>
    <style name="resting">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32pt</item>
        <item name="android:background">@color/resting_background</item>
    </style>

</resources>